<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Pantalla1"
    android:clickable="true"
    android:background="@drawable/fondo1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 1 Paso de parametros."
        android:id="@+id/Titulo"
        android:layout_marginLeft="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cual es tu nombre?"
        android:id="@+id/nombre"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Titulo"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre"
        android:id="@+id/textoNombre"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Titulo"
        android:enabled="true"
        android:singleLine="true"
        android:typeface="normal"
        android:maxLength="15"
        android:editable="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textoNombre"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="250dp"
        android:layout_alignEnd="@+id/nombre"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hombre"
            android:id="@+id/rb1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mujer"
            android:id="@+id/rb2" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cual es tu sexo?"
        android:id="@+id/Sexo"
        android:layout_below="@+id/textoNombre"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Información"
        android:id="@+id/enviarInfo"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="118dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuantos años tienes?"
        android:id="@+id/edad"
        android:layout_below="@+id/textoNombre"
        android:layout_alignEnd="@+id/textoNombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/textoEdad"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_alignEnd="@+id/edad"
        android:layout_toEndOf="@+id/enviarInfo"
        android:layout_marginLeft="20dp" />


</RelativeLayout>
