<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.takuma.pasodeparametros.Pantalla2"
    android:background="@drawable/fondo1">

>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu nombre es :"
        android:id="@+id/tuNombre"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nombrePantalla2"
        android:layout_marginRight="40dp"
        android:layout_alignBottom="@+id/tuNombre"
        android:layout_toEndOf="@+id/tuNombre"
        android:layout_marginBottom="-10dp"
        android:focusable="false"
        android:editable="false"
        android:clickable="false"
        android:inputType="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad :"
        android:id="@+id/tuEdad"
        android:layout_below="@+id/nombrePantalla2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:focusable="false"
        android:editable="false"
        android:clickable="false"
        android:inputType="none"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edadPantalla2"
        android:layout_above="@+id/botonFinalizar"
        android:layout_toEndOf="@+id/tuEdad"
        android:layout_below="@+id/tuNombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:id="@+id/botonFinalizar"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/tuEdad"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
